<h1>New Applicant</h1>
<%= form_with url: '/applicants', local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
   
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.number_field :zip %>

  <%= f.label :good_fit %>
  <%= f.text_field :good_fit %>

  <%= f.label :status %>
  <%= f.hidden_field :status, value: "In Progress" %>

  <%= f.submit "Submit" %>
<% end %>

